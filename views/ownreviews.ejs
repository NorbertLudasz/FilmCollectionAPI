<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>reviewspage</title>
    <link href="/style.css" rel="stylesheet" type="text/css">
    <script src="/public/ajax.js" type="text/javascript">
    </script>
  </head>
  <body>
    <div id="navbar">
      <span><a href="/">films</a></span>
    </div>

  <% if (reviewstemp.length) { %>
    <p>Number of unaccepted reviews: <%= reviewstemp.length %></p>
    <table>
      <tr id="reviewheader"><th>Leiras</th><th>Rating</th><th>Felhasznalo</th><th>Torles</th></tr>
    <% reviewstemp.forEach((reviewtemp) => { %>
        <tr id="reviewtemp<%= reviewtemp.id %>">
          <td><%= reviewtemp.reviewstext %></td>
          <td><code><%= reviewtemp.rating %></code></td>
          <td><%= reviewtemp.felhnev %></td>
          <td><%= reviewtemp.status %></td>
          <td><button id="reviewtempdelete/<%= reviewtemp.id %>" onclick="reviewtempdel(<%= reviewtemp.id %>)">Delete</button></td>
        </tr>
    <% }) %>
      </table>
  <% } %>

  <div class="delreviewtempmessage" id="delreviewtempmessage"></div>

  <% if (reviews.length) { %>
    <p>Number of reviews: <%= reviews.length %></p>
    <table>
      <tr id="reviewheader"><th>Leiras</th><th>Rating</th><th>Felhasznalo</th><th>Torles</th></tr>
    <% reviews.forEach((review) => { %>
        <tr id="review<%= review.id %>">
          <td><%= review.reviewstext %></td>
          <td><code><%= review.rating %></code></td>
          <td><%= review.felhnev %></td>
          <td><button id="reviewdelete/<%= review.id %>" onclick="reviewdel(<%= review.id %>)">Delete</button></td>
        </tr>
    <% }) %>
      </table>
  <% } %>
  
  <div class="delreviewmessage" id="delreviewmessage"></div>

  </body>

</html>